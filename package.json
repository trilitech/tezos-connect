{
  "name": "@trilitech/tezos-connect",
  "version": "1.0.0",
  "description": "The tezos-connect helps developers to build dApps and wallets for Tezos with a well-defined, standard JSDON RPC interface.",
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "tsd": {
    "directory": "test"
  },
  "tsup": {
    "entry": [
      "src/*"
    ],
    "dts": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepare": "echo 'Running prepare script for tezos-connect...' && yarn build",
    "prettier": "prettier --write 'src/*'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint-ci": "eslint 'src/**/*.ts' -f json -o lintReport.json || true",
    "test": "jest",
    "type-test": "tsd"
  },
  "keywords": [
    "tezos",
    "tezos-connect",
    "crypto",
    "blockchain",
    "tezos",
    "decentralized",
    "dapp",
    "wallet"
  ],
  "author": "Trilitech TriliTech <contact@trili.tech>> (https://trili.tech)",
  "license": "MIT",
  "homepage": "https://trili.tech",
  "devDependencies": {
    "@airgap/beacon-sdk": "^4.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsd": "^0.31.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@taquito/rpc": "^20.0.1",
    "@taquito/signer": "^20.0.1",
    "@taquito/taquito": "^20.0.1",
    "bufferutil": "^4.0.8",
    "encoding": "^0.1.13",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "utf-8-validate": "^6.0.4"
  },
  "packageManager": "yarn@4.4.0",
  "peerDependencies": {
    "@airgap/beacon-sdk": "*"
  }
}
